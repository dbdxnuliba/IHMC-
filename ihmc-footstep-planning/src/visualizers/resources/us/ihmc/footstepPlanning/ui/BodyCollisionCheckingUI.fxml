<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="us.ihmc.footstepPlanning.ui.controllers.BodyCollisionCheckingUIController">
    <children>
        <GridPane hgap="8.0" layoutX="15.0" layoutY="17.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="20.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="10.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <CheckBox fx:id="enablePathCollisionChecking" mnemonicParsing="false" text="Check for Path Collisions"
                          GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <CheckBox fx:id="enableBodyCollisionChecking" mnemonicParsing="false" text="Check for Bounding Box Collisions"
                              GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <Label text="Body Box Depth" GridPane.halignment="RIGHT" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <Label text="Body Box Width" GridPane.halignment="RIGHT" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <Label text="Body Box Height" GridPane.halignment="RIGHT" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                <Label text="# Bounding box checks" GridPane.halignment="RIGHT" GridPane.columnIndex="2" GridPane.rowIndex="6"/>

                <Spinner fx:id="bodyDepth" GridPane.halignment="CENTER" editable="true" prefHeight="38.0" prefWidth="175.0" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                <Spinner fx:id="bodyWidth" GridPane.halignment="CENTER" editable="true" prefHeight="38.0" prefWidth="175.0" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
                <Spinner fx:id="bodyHeight" GridPane.halignment="CENTER" editable="true" prefHeight="38.0" prefWidth="175.0" GridPane.columnIndex="3" GridPane.rowIndex="4"/>
                <Spinner fx:id="numberOfBoundingBoxChecks" GridPane.halignment="CENTER" editable="true" prefHeight="38.0" prefWidth="175.0" GridPane.columnIndex="3" GridPane.rowIndex="6"/>

                <Label text="Body Box Base X" GridPane.halignment="RIGHT" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
                <Label text="Body Box Base Y" GridPane.halignment="RIGHT" GridPane.columnIndex="4" GridPane.rowIndex="3"/>
                <Label text="Body Box Base Z" GridPane.halignment="RIGHT" GridPane.columnIndex="4" GridPane.rowIndex="4"/>

                <Spinner fx:id="bodyBoxBaseX" GridPane.halignment="CENTER" editable="true" prefHeight="38.0" prefWidth="175.0" GridPane.columnIndex="5" GridPane.rowIndex="2"/>
                <Spinner fx:id="bodyBoxBaseY" GridPane.halignment="CENTER" editable="true" prefHeight="38.0" prefWidth="175.0" GridPane.columnIndex="5" GridPane.rowIndex="3"/>
                <Spinner fx:id="bodyBoxBaseZ" GridPane.halignment="CENTER" editable="true" prefHeight="38.0" prefWidth="175.0" GridPane.columnIndex="5" GridPane.rowIndex="4"/>

                <Label text="Distance from BB to penalize" GridPane.halignment="RIGHT" GridPane.columnIndex="6" GridPane.rowIndex="2"/>
                <Label text="Bounding box cost" GridPane.halignment="RIGHT" GridPane.columnIndex="6" GridPane.rowIndex="3"/>

                <Spinner fx:id="maximum2dDistanceFromBoundingBoxToPenalize" editable="true" GridPane.halignment="CENTER" prefHeight="38.0" prefWidth="175.0" GridPane.columnIndex="7" GridPane.rowIndex="2"/>
                <Spinner fx:id="boundingBoxCost" editable="true" GridPane.halignment="CENTER" prefHeight="38.0" prefWidth="175.0" GridPane.columnIndex="7" GridPane.rowIndex="3"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
