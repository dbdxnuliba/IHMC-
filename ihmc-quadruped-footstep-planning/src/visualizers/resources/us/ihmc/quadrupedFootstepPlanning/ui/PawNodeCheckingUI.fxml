<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="us.ihmc.quadrupedFootstepPlanning.ui.controllers.PawNodeCheckingUIController">
    <children>
        <GridPane hgap="5.0" layoutX="25.0" layoutY="27.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="6.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="6.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="6.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="6.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="6.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <ToggleButton fx:id="enableNodeChecking" mnemonicParsing="false" text="Enable" />
                <ToggleButton fx:id="nodeCheckerPositionToggleButton" mnemonicParsing="false" text="Place Step" GridPane.rowIndex="1"/>
                <CheckBox fx:id="checkNodesUsingPoseBetweenFeet" mnemonicParsing="false" text="Use Pose Between Feet" GridPane.rowIndex="2"/>

                <Label text="yaw" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="x" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label text="y" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

                <Spinner fx:id="nodeCheckerFootXSpinner" editable="true" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Spinner fx:id="nodeCheckerFootYSpinner" editable="true" GridPane.columnIndex="4" GridPane.rowIndex="0"/>
                <Spinner fx:id="nodeCheckerFootYaw" editable="true" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            </children>
        </GridPane>
    </children>
</AnchorPane>
